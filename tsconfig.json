{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@messanger/schemas": ["core/schemas"],
      "@messanger/interfaces": ["./core/interfaces"],
      "@messanger/dtos": ["./core/dtos"],
      "@messanger/src/*": ["./src/*"],
    }
  },
  "exclude": ["node_modules", "dist"]
}
